{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "checkJs": true,
    "strict": true,
    "types": ["vite/client"]
  },
  "include": ["src/**/*", "vite.config.js", "src/types/**/*.ts"],
  "exclude": ["node_modules", "prod"]
}
